<h1 class="text-center category-show">All events for <strong><%= @category.title %></strong></h1>

<div class="events">
  <div class="container">
    <div class="event-cards row">
      <% @events.each do |event| %>
        <%= link_to event_path(event.id), :class => "event-card col-6 col-md-6" do %>

            <%= cl_image_tag event.image %>
            <div class="event-titles">
              <h2><%= event.title %></h2>
              <h2><%= event.location %></h2>
              <h2><%= event.date %></h2>
            </div>

        <% end %>
      <% end %>
    </div>
  </div>
</div>
