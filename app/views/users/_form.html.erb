<div class="user-form justify-content-center col-md-6">
  <%= form_for @user do |f| %>
    <div class="form-group col-md-12">
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Username", :class => "form-control" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :email %>
      <% if @user.persisted? %>
        <p class="email-edit"><%= @user.email %></p>
      <% else %>
        <%= f.email_field :email, :placeholder => "Email", :class => "form-control" %>
      <% end %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "form-control" %>
    </div>
    <%= f.submit submit, :class => "btn-user btn btn-outline-dark" %>
  <% end %>
</div>
