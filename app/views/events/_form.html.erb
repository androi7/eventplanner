<%= form_for @event do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :date %>
  <%= f.date_field :date, min: Date.today, :required => true %>

  <%= f.label :location %>
  <%= f.text_field :location, :placeholder => 'Location', :required => true %>

  <%= f.label :description %>
  <%= f.text_area :description, col: 20, row: 40 %>

  <%= f.label :album %>
  <%= f.text_field :album %>
  
  <%= f.submit "Create Event" %>

<% end %>
