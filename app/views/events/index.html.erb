<h1>Events</h1>

<div class="events">
  <div class="container">
    <div class="event-cards row">
      <% @events.each do |event| %>
        <div class="event-card col-6">
          <%= image_tag event.image %>
          <div class="event-titles">
            <h2><%= event.title %></h2>
            <h2><%= event.location %></h2>
            <h2><%= date_format event.date %></h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
